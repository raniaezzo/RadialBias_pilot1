% e.g. loc_0 (tang_left)
% FOLDER RADIALTANG_2
% e.g. loc_0 (radial)
% e.g. loc_0 (tang)
% FOLDER CARDINAL_VS_OBLIQUE
% e.g. loc_0 (mean radialtang)
% e.g. loc_0 (mean non-radialtang)

% copy all location_dir folders

radialtang4_dir = fullfile(relative_summarypath, RADIALTANG_4);
radialtang2_dir = fullfile(relative_summarypath, RADIALTANG_2);
